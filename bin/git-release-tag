#!/bin/bash

. git-release-functions.sh

git_release_tag_main(){
  local last
  local confirm

  git_release_request_setup

  if [ -n "$(git tag | grep "$last")" ]; then
    echo "already tagged: '$last'"
    exit 1
  fi

  git_release_request_purge

  read -p "tag '$last'. OK? [Y/n] " confirm
  if [ -n "$confirm" ]; then
    case "$confirm" in
      Y*|y*)
        ;;
      *)
        echo "abort"
        exit 1
        ;;
    esac
  fi

  git tag "$last"
  git push --tags
}

git_release_tag_main
